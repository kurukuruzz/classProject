<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center_vertical">
        <Button
            android:id="@+id/backBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#00FF0000"
            android:drawableBottom="@drawable/back_btn_size"
            tools:ignore="SpeakableTextPresentCheck" />
        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="교정시험"
            android:textSize="24sp"
            android:layout_marginLeft="110dp"
            android:textColor="@color/black"
            android:fontFamily="@font/korail"/>

        <TextView
            android:id="@+id/num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="01"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/korail"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/10"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/korail"/>
    </LinearLayout>
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:background="@color/black" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="랜덤 단어를 보고 발음 하시오."
        android:textColor="@color/black"
        android:fontFamily="@font/korail"
        android:textSize="20sp"
        android:padding="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/leftBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#00FFFFFF"
            android:drawableBottom="@drawable/left_btn"
            android:text="Button"
            android:layout_marginStart="80dp"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/korail"
            android:text="단어"
            android:textColor="@color/black"
            android:textSize="36sp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"/>

        <Button
            android:id="@+id/rightBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:background="#00FFFFFF"
            android:drawableBottom="@drawable/right_btn"
            android:text="Button"
            android:layout_marginTop="-8dp"/>

        <Button
            android:id="@+id/testEnd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="시험 완료"
            android:layout_marginRight="10dp"/>
    </LinearLayout>


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@color/black"
        android:scaleType="centerCrop" />

    <Button
        android:id="@+id/testBtn"
        android:layout_width="150dp"
        android:layout_height="160dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="#00FF0000"
        android:drawableBottom="@drawable/unnamedsize"
        tools:ignore="SpeakableTextPresentCheck"/>

</LinearLayout>